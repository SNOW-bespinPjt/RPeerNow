    <select id="searchBacklogDetail" parameterType="Integer"
            resultType="com.example.peernow360.dto.BacklogDto">

        SELECT
            b.no,
            b.sprint_no,
            b.user_id,
            b.title,
            b.detail,
            b.status,
            b.reg_date,
            b.mod_date,
            b.project_no,
            u.image
        FROM
            backlog b
        JOIN
            user u
        ON
            b.user_id = u.id
        WHERE
            no = #{no}

    </select>

    <select id="searchBacklogFile" parameterType="Integer"
            resultType="com.example.peernow360.dto.FileDto">

        select
            *
        from
            backfile
        where
            backlog_no = #{no}

    </select>

    <select id="searchBacklogDayAndIng" parameterType="Integer"
            resultType="com.example.peernow360.dto.BacklogDto">

        select
            b.no,
            b.sprint_no,
            b.user_id,
            b.title,
            b.detail,
            b.status,
            b.reg_date,
            b.mod_date,
            b.project_no,
            u.image
        FROM
            backlog b
                JOIN
            user u
            ON
                b.user_id = u.id
        where
            sprint_no = #{sprintNo}
        AND
            status = "ing"

    </select>

    <update id="updateBacklogStatus" parameterType="com.example.peernow360.dto.BacklogDto">

        UPDATE
            backlog
        SET
            status = #{status},
            mod_date = NOW()
        WHERE
            no = #{no}

    </update>

    <update id="updateBacklogInfo" parameterType="com.example.peernow360.dto.BacklogDto">

        UPDATE
            backlog
        SET
            sprint_no = #{sprint_no},
            user_id = #{user_id},
            title = #{title},
            detail = #{detail},
            status = #{status},
            mod_date = NOW()

        WHERE
            no = #{no}

    </update>


    <delete id="removeBacklogInfo" parameterType="Integer">

        DELETE FROM
            backlog
        WHERE
            no = #{no}

    </delete>

    <delete id="removeBacklogFile" parameterType="Integer">

        DELETE FROM
            backfile
        WHERE
            backlog_no = #{no}

    </delete>

    <update id="updateBacklogSprint" parameterType="Integer">

        UPDATE
            backlog
        set
            sprint_no = #{sprint_no}
        where
            no = #{backlog_no}

    </update>

    <select id="searchAllBacklogList" parameterType="Integer"
            resultType="com.example.peernow360.dto.BacklogDto">

        select
            b.no,
            b.sprint_no,
            b.user_id,
