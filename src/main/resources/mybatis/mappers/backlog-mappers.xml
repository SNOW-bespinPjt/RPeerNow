<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.peernow360.mappers.IBacklogMapper">

    <insert id="createBacklogInfo"
            parameterType="com.example.peernow360.dto.BacklogDto" useGeneratedKeys="true" keyProperty="no">

        INSERT INTO
            BACKLOG(
                   sprint_no,
                   user_id,
                   title,
                   detail,
                   status,
                   reg_date,
                   mod_date)
        VALUES
            (#{sprint_no},
             #{user_id},
             #{title},
             #{detail},
             #{status},
             NOW(),
             NOW())

    </insert>
    
    <insert id="insertBacklogFile" parameterType="hashMap">

        INSERT INTO
            FILE(backlog_no,name )
        VALUES
            ( #{backlog_no},#{fileName})


    </insert>

    <update id="updateSprintInfo" parameterType="com.example.peernow360.dto.SprintDto">

        UPDATE
            SPRINT
        SET
            title = #{title},
            detail = #{detail},
            start_date = #{start_date},
            end_date = #{end_date},
            mod_date = NOW()
        WHERE
            no = #{no}

    </update>

    <delete id="removeSprintInfo" parameterType="Integer">

        DELETE FROM
                   SPRINT
        WHERE
            no = #{no}

    </delete>

</mapper>