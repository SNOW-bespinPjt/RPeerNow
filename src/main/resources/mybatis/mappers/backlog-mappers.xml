            b.detail,
            b.status,
            b.reg_date,
            b.mod_date,
            b.project_no,
            u.image
        FROM
            backlog b
                JOIN
            user u
            ON
                b.user_id = u.id
        where
            project_no = #{project_no}

    </select>

